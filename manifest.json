{
  "manifest_version": 2,
  "name": "Imgblock",
  "version": "0.1.0",
  "description": "Think Flashblock but for images",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["contentstyles.css"],
      "js": ["jquery-2.1.1.min.js", "contentscript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["images/imgblock-bg.png"],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
