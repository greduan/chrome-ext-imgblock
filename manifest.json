{
  "manifest_version": 2,
  "name": "Imgblock",
  "version": "0.1.0",
  "description": "Think Flashblock but for images",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["contentstyles.css"],
      "js": ["contentscript.js"]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ]
}
